<%= simple_form_for :post, url: post_path(@post.id), method: :patch do |f| %>
  <%= f.input :title, placeholder: "Title", label: false %>
  <%= f.input :url, as: :string, placeholder: "Post Url", label: false %>
  <%= f.text_area :text, placeholder: "Content", label: false %>
  <%= f.submit "Update Post" %>
<% end %>

