<p><h1><%= @post.title %></h1></p>
<p><%= @post.text %></p>
<p><%= link_to 'Back', blog_path %> | <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %></p>
<br>
<% unless @post.comments.blank? %>
  <p>
    <h2>Comments</h2>
    <% @post.comments.each do |comment| %>
      <em><%= comment.commenter %></em>: <%= comment.body %><br>
    <% end %>
  </p>
  <br>
<% end %>
<p>
  <h2>Add a comment:</h2>
  <%= simple_form_for([@post, @post.comments.build]) do |f| %>
    <%= f.input :commenter, placeholder: 'Name', label: false %>
    <%= f.text_area :body, placeholder: 'Comment' %>
    <%= f.submit "Post Comment" %>
  <% end %>
</p>