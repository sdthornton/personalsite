= simple_form_for message, url: contact_path, method: "post" do |f|
  - if message.errors.any?
    %ul
      - message.errors.full_messages.each do |msg|
        %li= msg

  = f.input :name, placeholder: "Your Name", label: false
  = f.input :email, placeholder: "Your Email Address", label: false
  = f.input :subject, placeholder: "What is this concerning?", label: false
  = f.input :body, as: :text, placeholder: "What would you like to talk to me about?", label: false
  = f.submit "Send Message"
